{
  "firestore": {
    "database": "(default)",
    "location": "nam5",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "site": "mei-robo-prod",
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "**/*.@(html|htm)",
        "headers": [
          { "key": "Cache-Control", "value": "no-store" },
          { "key": "X-Frame-Options", "value": "DENY" },
          { "key": "X-Content-Type-Options", "value": "nosniff" }
        ]
      },
      {
        "source": "/assets/partials/**",
        "headers": [
          { "key": "Cache-Control", "value": "no-store" }
        ]
      },
      {
        "source": "assets/**",
        "headers": [
          { "key": "Cache-Control", "value": "public,max-age=86400,immutable" },
          { "key": "X-Content-Type-Options", "value": "nosniff" }
        ]
      }
    ],
    "rewrites": [
      { "source": "/api/**", "run": { "serviceId": "mei-robo-prod-ghcr", "region": "southamerica-east1" } },
      { "source": "/health",  "run": { "serviceId": "mei-robo-prod-ghcr", "region": "southamerica-east1" } }
    ]
  }
}
